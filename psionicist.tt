{5}

#alias {dorift %w %w}
{
	#if {$psiautotrans}
	{
		#class autotrans open;
		#var {riftcaller} {%2};
		#line {substitute} {variables} {
			#act {{You can open a planar rift only to: (.+) planes!}}
			{
				t $riftcaller pick a valid plane! &2;
				killclass autotrans;
			}{1};
		};
			#act {{You open a planar rift to(?: the)? \w+ plane!}}
			{
				
				killclass autotrans;
			}{1};
		#class autotrans close;
		#unvar {riftcaller};
		rift %1;
		sit;
		rest;
		med;
	};
}

#ALIAS {{do(?:hole|worm) (\w+) (\w+)}}
{
	#if {$psiautotrans}
	{
		#class autotrans open;
		#var {holecaller} {%3};
		#if {"%2" == "me"}
		{
			#var {holetarg} {$holecaller};
		};
		#else
		{
			#var {holetarg} {%2};
		};
		#line {substitute} {variables} {
			#act {You fail to find your target on this plane.}
			{
				#showme {t $holecaller you are not on the same plane I am.};
				t $holecaller you are not on the same plane I am.;
				killclass autotrans;
			}{1};
			#act {You fail to locate your targets.}
			{
				#showme {t $holecaller can't locate that target ($holetarg).};
				t $holecaller can't locate that target ($holetarg).;
				killclass autotrans;
			}{1};
			#act {Something prevents your projections from completing}
			{
				#showme {t $holecaller you are in a !tele area.};
				t $holecaller you are in a !tele area.;
				killclass autotrans;
			}{1};
			#act {You open a wormhole!}
			{
				killclass autotrans;
				killclass autotransmessages;
			}{1};
			#class autotrans close;
			#class autotransmessages open;
			#act {No-one by that name here...}
			{
				gcc $holecaller you are invis or hidden and your target was messed up!  Dummeh!;
				killclass autotransmessages;
			}{1};
			#act {%i{^you tell .+}}
			{
				killclass autotransmessages;
				#showme $holetarg;
			}{1};
		};
		#class autotransmessages close;
		hole $holetarg;
		sit;
		rest;
		med;
	};
}
{5}

