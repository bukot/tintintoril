#ALIAS {{autotrans (on|off)}}
{
	#switch {"%2"}
	{
		#case {"on"}
		{
			#variable psiautotrans {1};
			#tic {traslive} {pose} {90};
		};
		#default
		{
			#variable psiautotrans {0};
			#untic {traslive};
		}
	};
	#if {$psiautotrans}
	{
		#showme {you say auto transport is on!}
	};
	#else
	{
		#showme {you say auto transport is off!}
	}
}
{5}

#MACRO {\eOP}
{
	shift ix
}

#VARIABLE         {class} {psionicist}
