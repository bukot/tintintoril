#ALIAS {%i{buffcast ([a-z]+)}}
{
	#if {"$statscleric[%2]" != ""}
	{
		#if {"$buffname" == "self" || "$buffname" == "me"}
		{
			#variable {buffname} {$me}
		};
		#echo {$buffname};
		#if {@chkstat{{$buffname} {statuses}}}
		{
			#variable {buff[name]} {$buffname};
			#variable {buff[spell]} {%2};
			#variable {buff[say]} {%2};
			load bufftrack
		}
	}
}
{5}

