#FUNCTION {etarg}
{
	#nop this function is for spells that should not be cast w/o a target;
	#if {"%1" != ""}
	{
		#class etarg open;
		#action {^Exits:}{#var {castok} {0}#class etarg open;#act {%1}{#var {castok} {1}};#act {{< \d*h/\d*H \d*v\d*V T:}}{#class etarg kill;};#class etarg close;};
		#class etarg close;
		l;
		#if {"%1" == "me"}
		{
			#showme spell says no valid target!!!;
			#return neg
		};
		#else
		{
			#if {$castok}
			{
				#unvariable castok;
				#return %1
			};
			#else
			{
				#showme spell says no valid target!!!;
				#return neg
			}
		}
	};
	#else
	{
		#if {&enemy}
		{
			#return $enemy;
			load silence
		};
		#else
		{
			#showme spell says no valid target!!!;
			#return neg
		}
	};
	#unvariable stest
}

